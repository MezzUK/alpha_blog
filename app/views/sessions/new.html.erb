<h1 align="center">Log in</h1>
<%= form_with(scope: :session, class: "shadow p-3 mb-5 bg-info rounded", local: true, url: login_path) do |f| %>
<div class="form-group row">
    <%= f.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
            <%= f.text_field :email, class: "form-control shadow rounded", placeholder: "Enter email" %>
        </div>
</div>

<div class="form-group row">
    <%= f.label :password, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
        <%= f.password_field :password, class: "form-control shadow rounded", autocomplete: "off" %>
    </div>
</div>

<div class="form-group row justify-content-center">
    <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %><br>
</div>

<% end %>
</div>
<div class="mb-3">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
</div>